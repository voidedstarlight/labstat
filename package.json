{
	"devDependencies": {
		"@eslint/js": "^9.38.0",
		"@stylistic/eslint-plugin": "^5.5.0",
		"@tsconfig/node24": "^24.0.1",
		"@tsconfig/recommended": "^1.0.10",
		"@types/node": "24.9.1",
		"@typescript/native-preview": "^7.0.0-dev.20251024.1",
		"bufferutil": "^4.0.9",
		"concurrently": "^9.2.1",
		"eslint": "^9.38.0",
		"jiti": "^2.6.1",
		"tsc-watch": "^7.2.0",
		"typescript-eslint": "^8.46.2",
		"utf-8-validate": "^6.0.5"
	},
	"license": "MIT",
	"name": "labstat",
	"scripts": {
		"build:front": "npm run build -w @labstat/web && npm run build -w @labstat/api",
		"build:node": "npm run build -w @labstat/node",
		"dev:front": "concurrently -n '@UI,@UT,WEB,API' -c 'bgBlack.white,bgBlack.white,bgBlue.black,bgMagentaBright.black' 'npm run dev -w @labstat/ui' 'npm run dev -w @labstat/util' 'npm run dev -w @labstat/web' 'npm run dev -w @labstat/api'",
		"dev:node": "concurrently -n '@UT,SRV' -c 'bgBlack.white,bgCyan.black' 'npm run dev -w @labstat/util' 'npm run dev -w @labstat/node'",
		"lint": "eslint apps lib"
	},
	"version": "0.0.1",
	"workspaces": [
		"apps/*",
		"lib/*"
	]
}
